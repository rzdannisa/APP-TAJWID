void __fastcall Tmd_arid::FormShow(TObject *Sender)
{
DM1->tajwid->Close();
DM1->tajwid->SQL->Clear();
DM1->tajwid->SQL->Add("select *from hukumtajwid where id='9'");
DM1->tajwid->Open();
c->Picture->LoadFromFile("C:\\xampp\\htdocs\\atajwid\\"+DM1->tajwid->FieldByName("tambahan1")->AsString);
Image2->Picture->LoadFromFile("C:\\xampp\\htdocs\\atajwid\\"+DM1->tajwid->FieldByName("contoh1")->AsString);
Image3->Picture->LoadFromFile("C:\\xampp\\htdocs\\atajwid\\"+DM1->tajwid->FieldByName("contoh2")->AsString);

OpenDialog1->FileName=("C:\\xampp\\htdocs\\atajwid\\"+DM1->tajwid->FieldByName("suara1")->AsString);
MediaPlayer1->FileName=OpenDialog1->FileName;
MediaPlayer1->Open();
OpenDialog2->FileName=("C:\\xampp\\htdocs\\atajwid\\"+DM1->tajwid->FieldByName("suara2")->AsString);
MediaPlayer2->FileName=OpenDialog2->FileName;
MediaPlayer2->Open();

}
