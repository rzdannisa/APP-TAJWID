//---------------------------------------------------------------------------
void __fastcall Ttas::Panel5Click(TObject *Sender)
{
if(Edit1->Text == "muncul") {
		muta->Visible=true;
		mtjn->Visible=true;
	} else if(Edit1->Text == "hilang") {
		muta->Visible=false;
		mtjn->Visible=false;


}
	}
