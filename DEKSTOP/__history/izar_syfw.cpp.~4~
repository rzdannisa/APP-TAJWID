Tiz_syfw *iz_syfw;
//---------------------------------------------------------------------------
__fastcall Tiz_syfw::Tiz_syfw(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall Tiz_syfw::p1MouseLeave(TObject *Sender)
{
p1->Color=clWhite;
   p1->Font->Color=0x0085A016;

}
//---------------------------------------------------------------------------

void __fastcall Tiz_syfw::p1MouseMove(TObject *Sender, TShiftState Shift, int X, int Y)

{
 p1->Color=0x0085A016;
	p1->Font->Color=clWhite;

}
//---------------------------------------------------------------------------

