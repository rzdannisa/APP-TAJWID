//---------------------------------------------------------------------------

void __fastcall Tiz_syfw::p1Click(TObject *Sender)
{
		if (!k1)
	k1 = new Tk1(this);
  k1->Show();
  k1->BringToFront();
}
//---------------------------------------------------------------------------

